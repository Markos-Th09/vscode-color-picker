{
  "name": "vscode-color-picker",
  "displayName": "VSCode Color Picker",
  "icon": "icon.png",
  "publisher": "MarkosTh09",
  "description": "let's you use vscode's css color picker in other documents",
  "version": "0.0.3",
  "repository": {
    "type": "git",
    "url": "https://github.com/Markos-Th09/vscode-color-picker.git"
  },
  "engines": {
    "vscode": "^1.62.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "configuration": {
      "title": "vscode-color-picker",
      "properties": {
        "vscode-color-picker.languages": {
          "type": "array",
          "default": [
            "javascript",
            "javascriptreact",
            "typescript",
            "typescriptreact",
            "postcss",
            "xml",
            "html"
          ],
          "description": "Set languages to be detected by the extension"
        }
      }
    }
  },
  "capabilities": {
    "colorProvider": "true"
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package:vsix": "vsce package --no-dependencies"
  },
  "devDependencies": {
    "@types/glob": "^7.1.4",
    "@types/mocha": "^9.0.0",
    "@types/node": "14.x",
    "@types/vscode": "^1.62.0",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "@vscode/test-electron": "^1.6.2",
    "eslint": "^8.1.0",
    "glob": "^7.1.7",
    "mocha": "^9.1.3",
    "ts-loader": "^9.2.5",
    "typescript": "^4.4.4",
    "vsce": "^2.6.7",
    "webpack": "^5.52.1",
    "webpack-cli": "^4.8.0"
  },
  "dependencies": {
    "parse-css-color": "^0.1.2"
  }
}